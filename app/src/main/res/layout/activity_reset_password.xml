<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".activity.LoginActivity">

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#011638"
            android:id="@+id/header"
            android:layout_height="50dp"
    >
        <TextView
                android:text="EAT-PROPOSALS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#EEF0F2"
                android:textStyle="bold"
                android:textSize="20sp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewCancelReset"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:text="Cancel"
        />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <TextView
                android:id="@+id/txtViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="Password Reset"
                android:textAlignment="center"
                android:textColor="@color/oxford_blue"
                android:textSize="20sp"
                android:textStyle="bold"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewTitle"
                android:text="Send Password Reset E-mail to:"
                android:layout_marginTop="50dp"
                android:layout_marginStart="10dp"
                android:id="@+id/txtViewDescription"
                android:textColor="@color/black"
        />

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:errorEnabled="true"
                android:id="@+id/layoutResetEmail"
                android:layout_below="@id/txtViewDescription"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
        >
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/edtTextResetEmail"
                    android:hint="Enter E-mail"
            />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
                android:id="@+id/buttonReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutResetEmail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:text="Reset Password"
                android:textAllCaps="false"
                android:backgroundTint="@color/oxford_blue"
                android:textColor="@color/cultured"
        />

    </RelativeLayout>

</LinearLayout>